{
  "name": "convex-coder",
  "version": "1.0.0",
  "description": "Convex application for Coder workspace with self-hosted backend support",
  "repository": {
    "type": "git",
    "url": "https://github.com/user/convex-coder.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "dev:backend": "convex dev",
    "docker:up": "npm run setup:env && docker compose --env-file .env.docker up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:generate-admin-key": "docker compose exec backend ./generate_admin_key.sh",
    "setup:env": "node -e \"const fs=require('fs'); const env=fs.readFileSync('.env.docker.example','utf8'); const replaced=env.replace(/\\$\\{([^}]+)\\}/g,(m,k)=>process.env[k]||m); fs.writeFileSync('.env.docker',replaced);\"",
    "convex": "convex",
    "deploy-functions": "convex dev --once",
    "format": "prettier --write \"./src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "tsc --noEmit --incremental false",
    "lint": "eslint . --quiet",
    "check": "npm run typecheck && npm run lint"
  },
  "keywords": ["convex", "coder", "self-hosted"],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.15.0",
  "dependencies": {
    "@faker-js/faker": "^9.8.0",
    "convex": "^1.26.1",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@eslint/css": "^0.9.0",
    "@eslint/js": "^9.29.0",
    "@types/babel__core": "^7.20.0",
    "@types/node": "^24.0.3",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-compiler": "^19.1.0-rc.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.2.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1",
    "vite": "^6.3.5"
  }
}
