{
  "name": "convex-coder",
  "version": "1.0.0",
  "description": "Convex application for Coder workspace with self-hosted backend support",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/user/convex-coder.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:analyze": "tsc && vite build --mode analyze",
    "dev:backend": "pnpm docker:up",
    "dev:backend:self-hosted": "node dev-backend.js",
    "deploy:self-hosted": "node deploy-to-self-hosted.js",
    "setup-env": "node setup-env.js",
    "sync-admin-key": "node sync-admin-key.js",
    "admin-key-status": "node sync-admin-key.js --status",
    "setup-minio": "bash setup-minio.sh",
    "docker:up": "docker compose --env-file .env.docker up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:generate-admin-key": "docker compose exec backend ./generate_admin_key.sh",
    "convex": "convex",
    "deploy-functions": "convex dev --once",
    "format": "prettier --write \"./src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"./src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "tsc --noEmit --incremental false",
    "lint": "eslint . --quiet",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "pnpm exec playwright test",
    "test:e2e:ui": "pnpm exec playwright test --ui --ui-host=0.0.0.0 --ui-port=9323",
    "test:e2e:report": "pnpm exec playwright show-report --host=0.0.0.0 --port=9325",
    "test:e2e:debug": "pnpm exec playwright test --debug",
    "test:e2e:install": "pnpm exec playwright install",
    "test:e2e:capture": "pnpm exec playwright test tests/e2e/enhanced-capture-demo.spec.ts",
    "test:e2e:mobile": "INCLUDE_MOBILE=1 pnpm exec playwright test",
    "test:e2e:headed": "pnpm exec playwright test --headed",
    "test:e2e:trace": "pnpm exec playwright test --trace=on",
    "check": "npm run typecheck && npm run lint && npm run test:run",
    "context:prune": "node scripts/context-pruner.js prune",
    "context:prune-all": "node scripts/context-pruner.js prune",
    "knowledge:extract": "node scripts/context-knowledge-manager.js extract",
    "knowledge:extract-all": "node scripts/context-knowledge-manager.js extract-all"
  },
  "keywords": [
    "convex",
    "coder",
    "self-hosted"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.15.0",
  "dependencies": {
    "@faker-js/faker": "10.0.0",
    "@radix-ui/react-avatar": "1.1.10",
    "@radix-ui/react-dialog": "1.1.15",
    "@radix-ui/react-scroll-area": "1.2.10",
    "@radix-ui/react-slot": "1.2.3",
    "@tailwindcss/vite": "4.1.12",
    "autoprefixer": "10.4.21",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "convex": "1.26.1",
    "lucide-react": "0.541.0",
    "postcss": "8.5.6",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "tailwind-merge": "3.3.1",
    "tailwindcss": "4.1.12"
  },
  "devDependencies": {
    "@eslint/css": "0.10.0",
    "@eslint/js": "9.34.0",
    "@playwright/test": "1.55.0",
    "@testing-library/jest-dom": "6.8.0",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@trivago/prettier-plugin-sort-imports": "5.2.2",
    "@types/babel__core": "7.20.5",
    "@types/node": "24.3.0",
    "@types/react": "19.1.11",
    "@types/react-dom": "19.1.7",
    "@vitejs/plugin-react": "5.0.1",
    "@vitest/ui": "3.2.4",
    "eslint": "9.34.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-compiler": "19.1.0-rc.2",
    "eslint-plugin-react-hooks": "5.2.0",
    "globals": "16.3.0",
    "jsdom": "26.1.0",
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "0.6.14",
    "typescript": "5.9.2",
    "typescript-eslint": "8.40.0",
    "vite": "7.1.3",
    "vite-bundle-analyzer": "^1.2.1",
    "vitest": "3.2.4",
    "webpack-bundle-analyzer": "^4.10.2"
  }
}
